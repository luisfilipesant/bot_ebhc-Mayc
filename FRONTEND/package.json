{
  "name": "whatsapp-automation-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "build-css": "tailwindcss -i ./src/styles.css -o ./dist/output.css --watch",
    "dist": "npm run build && electron-builder",
    "dist-win": "npm run build && electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "whatsapp",
    "automation",
    "electron",
    "baileys"
  ],
  "author": "EBHC",
  "license": "ISC",
  "description": "Aplicação desktop para automação de mensagens no WhatsApp usando Baileys API",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^6.7.18",
    "axios": "^1.11.0",
    "electron": "^28.2.0",
    "node-fetch": "^3.3.2",
    "qrcode.react": "^3.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io-client": "^4.8.1",
    "webpack-dev-server": "^5.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.4",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "webpack": "^5.102.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.ebhc.whatsapp-automation",
    "productName": "Automação WhatsApp - EBHC",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "dist/**/*",
      "assets/**/*",
      "src/services/**/*",
      "src/utils/**/*",
      "node_modules/@whiskeysockets/baileys/**/*",
      "node_modules/@hapi/boom/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Automação WhatsApp - EBHC"
    }
  }
}
